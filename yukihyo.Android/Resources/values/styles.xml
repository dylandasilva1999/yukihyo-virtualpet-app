<?xml version="1.0" encoding="utf-8" ?>
<resources>

	<style name="MyTheme.Base" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowActionBar">false</item>
		<item name="textAllCaps">false</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textAppearanceButton">@style/button.text</item>
	</style>

	<style name="MyTheme" parent="MyTheme.Base">
		<item name="android:windowActionBar">false</item>
		<item name="textAllCaps">false</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textAppearanceButton">@style/button.text</item>
	</style>

	<style name="MyTheme.Splash" parent ="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@drawable/splash_screen</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowActionBar">true</item>
		<item name="textAllCaps">false</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textAppearanceButton">@style/button.text</item>
	</style>

	<style name="button.text" parent="Base.TextAppearance.AppCompat.Button">
		<item name="android:textAllCaps">false</item>
	</style>
	
</resources>